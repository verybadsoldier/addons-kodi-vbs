<addon id="script.reliableresume"
    name="Reliable Resume" version="3.1.0" provider-name="vbs">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="xbmc.addon" version="18.9.701"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py" />
  <extension point="xbmc.service" library="observer.py"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Resumes the last played media.</summary>
    <description lang="en">Resumes the last played media reliably by saving the current media position persisently every couple of seconds (configurable). Therefore it also works when the system gets turned off by power loss. Based von ResumeX by stanley87.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon
  id="script.watched.states"
  name="Import/Export Watched States"
  version="1.1.1"
  provider-name="devkid">
  <requires>
    <import addon="xbmc.python" version="2.12.0"/>
    <import addon="script.module.elementtree" version="1.2.7"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py"></extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>A script for exporting and importing watched states</summary>
    <description>Exports/imports the watched states of movies and TV shows to an XML file. Video files are matched by scraper titles and release year while importing so it is independent of filenames and file locations. Also it takes last watched date into account.</description>
    <license>GPL 2.0</license>
  </extension>
</addon>
</addons>
